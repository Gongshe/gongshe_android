<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gongshe">

    <uses-sdk android:targetSdkVersion="18" android:minSdkVersion="10"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application android:icon="@drawable/icon"
                 android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                 android:label="@string/app_name"
                 android:name=".GongSheApp">

        <activity android:name=".controller.LoginActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".controller.MainUIActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.EditPostActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.GroupManageActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.PersonInfoActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.CreateGroupActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.FriendListActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.ChatActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.PeopleGroupActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.PostBrowseActivity"
                  android:windowSoftInputMode="stateHidden"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.RegisterActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.ImportFriendActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".controller.GroupInfoActivity"
                  android:screenOrientation="portrait"/>

    </application>
</manifest>
