<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="69dp"
             android:minHeight="69dp">

    <RelativeLayout android:id="@+id/back"
                    android:tag="back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView android:id="@+id/txv_delete"
                  android:text="@string/txt_delete"
                  android:gravity="right|center_vertical"
                  android:layout_alignParentLeft="true"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:paddingRight="20dp"
                  android:background="@color/red"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout android:id="@+id/front"
                  android:tag="front"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:background="@color/white"
                  android:minHeight="69dp"
                  android:layout_height="69dp">

        <com.gongshe.view.CirceImageView
                android:id="@+id/icon_avatar"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/test_circle"/>

        <TextView android:id="@+id/txv_name"
                  android:layout_height="wrap_content"
                  android:layout_width="180dp"
                  android:layout_weight="1"
                  android:layout_marginLeft="15dp"
                  android:singleLine="true"
                  android:ellipsize="end"
                  android:layout_gravity="left|center_vertical"
                  android:gravity="left|center_vertical"
                  android:textColor="@color/text_dark"
                  android:textSize="18sp"/>
    </LinearLayout>

</FrameLayout>