<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#2D1a1f"
              android:orientation="vertical">

    <fragment xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              gongshe:left_btn="text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ListView android:id="@+id/contact_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@android:color/black"
              android:divider="#35302F"
              android:dividerHeight="1dip"
              android:listSelector="@android:color/transparent"
              android:cacheColorHint="#00000000"/>

</LinearLayout>