<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              gongshe:left_button="text"
              gongshe:right_button_one="invisible"
              gongshe:title_text="参与讨论者"/>

    <GridView android:id="@+id/gdv_people_grid"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:numColumns="3"
              android:cacheColorHint="#00000000"/>
</LinearLayout>