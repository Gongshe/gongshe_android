<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment
            android:name="com.gongshe.controller.HeaderFragment"
            android:id="@+id/common_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
            gongshe:text_title="@string/txt_group_member"
            gongshe:left_btn="visible"
            gongshe:img_left_btn="@drawable/icon_back"
            gongshe:right_btn_one="invisible"
            gongshe:img_right_one="@drawable/icon_add"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_page">

        <RelativeLayout android:id="@+id/opt_container"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:minHeight="98dp">
            <ImageView
                    android:id="@+id/icon_add_member"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/icon_add_member"
                    android:scaleType="fitXY"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="91dp"
                    android:contentDescription="@string/dummy_blind"/>

            <ImageView
                    android:id="@+id/icon_minus_member"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/icon_minus_member"
                    android:scaleType="fitXY"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="91dp"
                    android:contentDescription="@string/dummy_blind"/>
        </RelativeLayout>

        <GridView android:id="@+id/grid_member"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:numColumns="3"
                  android:layout_marginTop="20dp"
                  android:verticalSpacing="5dp"
                  android:listSelector="#00000000"
                  android:cacheColorHint="#00000000"/>

    </LinearLayout>
</LinearLayout>