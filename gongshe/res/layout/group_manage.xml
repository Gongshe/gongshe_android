<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <fragment android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              gongshe:left_button="back"
              gongshe:right_button="invisible"
              gongshe:title_text="我的群组"/>

    <ListView android:id="@+id/lsv_group_list"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:cacheColorHint="#00000000"
              android:layout_weight="1"/>

    <Button android:id="@+id/btn_create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="create group"/>
</LinearLayout>