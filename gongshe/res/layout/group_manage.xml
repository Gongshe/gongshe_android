<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <fragment android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              gongshe:left_btn="visible"
              gongshe:img_left_btn="@drawable/icon_back"
              gongshe:right_btn_one="visible"
              gongshe:img_right_one="@drawable/icon_add"/>

    <fragment android:name="com.gongshe.controller.GroupListFragment"
              android:id="@+id/group_list_fragment"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
</LinearLayout>