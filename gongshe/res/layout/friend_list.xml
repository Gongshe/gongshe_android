<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              gongshe:left_btn="visible"
              gongshe:right_btn_one="visible"
              gongshe:text_title="select friends"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <fragment android:name="com.gongshe.controller.FriendsFragment"
              android:id="@+id/friend_list"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              gongshe:item_mode="selection"/>

</LinearLayout>