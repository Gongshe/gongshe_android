<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <fragment xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              gongshe:left_btn="text"
              gongshe:right_btn_text="text"
              gongshe:text_right_btn="@string/btn_post"
              gongshe:text_title="@string/txt_post"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_height="wrap_content"
                  android:layout_width="60dp"
                  android:text="@string/txt_title"/>

        <EditText android:id="@+id/etx_input_title"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:hint="@string/hint_input_title"
                  android:singleLine="true"
                  android:ellipsize="end"
                  android:inputType="text"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/member_list"
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp">
        <ImageView android:id="@+id/btn_add_memeber"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_menu_camera"/>
    </LinearLayout>

    <EditText android:id="@+id/etx_input_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_marginTop="10dp"
              android:hint="@string/hint_input_content"
              android:layout_marginBottom="10dp"/>

    <Button android:id="@+id/btn_at_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_at_my_friend"/>
</LinearLayout>