<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/title_bar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="54dp"
              android:orientation="horizontal"
              android:background="@drawable/bg_header">

    <FrameLayout android:layout_width="100dp"
                 android:layout_height="54dp">
        <ImageView
                android:id="@+id/btn_header_left"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_gravity="left|center_vertical"
                android:contentDescription="@string/dummy_blind"/>
    </FrameLayout>

    <TextView
            android:id="@+id/txv_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"/>

    <LinearLayout
            android:layout_width="100dp"
            android:minHeight="54dp"
            android:layout_height="54dp">

        <ImageView
                android:id="@+id/btn_header_right_two"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/dummy_blind"
                android:visibility="invisible"/>

        <ImageView
                android:id="@+id/btn_header_right_one"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/dummy_blind"
                android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>
