<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="left|center_vertical"
              android:layout_gravity="left|center_vertical"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/txv_post_title"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:layout_marginTop="14dp"
              android:gravity="left|center_vertical"
              android:layout_gravity="left|center_vertical"
              android:singleLine="true"
              android:ellipsize="end"
              android:textSize="20sp"
              android:textColor="@color/text_title"
              android:paddingLeft="20dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="left|center_vertical"
                  android:layout_gravity="left|center_vertical"
                  android:layout_marginTop="2dp"
                  android:layout_marginLeft="20dp"
                  android:orientation="horizontal">

        <TextView android:id="@+id/txv_owner"
                  android:layout_height="wrap_content"
                  android:layout_width="70dp"
                  android:gravity="left|center_vertical"
                  android:layout_gravity="left|center_vertical"
                  android:drawableLeft="@drawable/icon_head"
                  android:drawablePadding="5dp"
                  android:text="12sp"
                  android:textColor="@color/txt_info"
                  android:ellipsize="end"
                  android:singleLine="true"/>

        <TextView android:id="@+id/txv_time"
                  android:layout_height="wrap_content"
                  android:layout_width="90dp"
                  android:gravity="left|center_vertical"
                  android:layout_gravity="left|center_vertical"
                  android:drawableLeft="@drawable/icon_clock"
                  android:drawablePadding="5dp"
                  android:text="12sp"
                  android:textColor="@color/txt_info"
                  android:ellipsize="end"
                  android:singleLine="true"/>
    </LinearLayout>

    <TextView android:id="@+id/txv_content"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:gravity="left|center_vertical"
              android:layout_gravity="left|center_vertical"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="6dp"
              android:textSize="16sp"
              android:textColor="@color/txt_content"
              android:minLines="1"
              android:maxLines="2"
              android:ellipsize="end"/>

    <TextView android:id="@+id/txv_at_list"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:gravity="left|center_vertical"
              android:layout_gravity="left|center_vertical"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="8dp"
              android:textSize="13sp"
              android:textColor="@color/red"
              android:singleLine="true"
              android:ellipsize="end"/>
</LinearLayout>