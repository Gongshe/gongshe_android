<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              gongshe:left_btn="visible"
              gongshe:img_left_btn="@drawable/icon_back"/>

    <fragment android:name="com.gongshe.controller.TitlePostFragment"
              android:id="@+id/content_frame"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_post_bottom"
            android:orientation="horizontal">

        <ImageView android:id="@+id/imv_camera"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/icon_camera"
                   android:scaleType="centerInside"
                   android:layout_gravity="top"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="15dp"
                   android:contentDescription="@string/dummy_blind"/>

        <EditText
                android:id="@+id/etx_post_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="top"
                android:background="@drawable/bg_etx_reply"
                android:inputType="textMultiLine"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/btn_reply"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/btn_send"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="top"
                android:text="@string/btn_reply"/>
    </LinearLayout>
</LinearLayout>