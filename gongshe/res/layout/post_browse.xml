<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment android:name="com.gongshe.controller.HeaderFragment"
              android:id="@+id/common_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:gongshe="http://schemas.android.com/apk/res/com.gongshe"
              gongshe:left_btn="text"/>

    <fragment android:name="com.gongshe.controller.ContentFrameFragment"
              android:id="@+id/content_frame"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/etx_post_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/btn_reply"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/btn_reply"/>
    </LinearLayout>
</LinearLayout>