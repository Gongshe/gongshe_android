<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="left|top"
              android:layout_gravity="left|center_vertical"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:gravity="left|top"
                  android:layout_gravity="left|top"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <com.gongshe.view.CirceImageView
                android:id="@+id/imv_avatar"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/yafan_icon"/>

        <TextView android:id="@+id/txv_owner_name"
                  android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/text_dark"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="5dp"
                  android:singleLine="true"
                  android:ellipsize="end"/>

        <TextView android:id="@+id/txv_time"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/text_grey"
                  android:textSize="9sp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="3dp"
                  android:drawableLeft="@drawable/icon_clock_18"
                  android:drawablePadding="2dp"/>

        <TextView android:id="@+id/txv_day"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/text_grey"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="20dp"
                  android:textSize="9sp"/>
    </LinearLayout>

    <TextView android:id="@+id/txv_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/bg_post"
              android:gravity="left|top"
              android:textSize="14sp"
              android:layout_marginTop="26dp"
              android:layout_marginBottom="18dp"
              android:layout_marginRight="20dp"
              android:paddingTop="10dp"
              android:paddingLeft="16dp"
              android:paddingRight="10dp"
              android:paddingBottom="10dp"
              android:textColor="@color/txt_content"/>
</LinearLayout>